{
  "manifest_version": 3,
  "name": "dressmeup",
  "version": "1.0",
  "description": "A Chrome extension with Supabase authentication",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:54321/*",
    "https://*.supabase.co/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://127.0.0.1:54321 https://*.supabase.co;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "dressmeup"
  }
}